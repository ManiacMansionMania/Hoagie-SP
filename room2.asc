// Hausflur oben (Familie Hoagie)

/****************************
*   Raum-Funktionen
****************************/
function room_Load()
{
	oTuerBad.init_object(3);
	oTuerHarry.init_object(2);
	//oTuerHoagie.init_object(1);
	Door[0].Init(oTuerHoagie, hTuerHoagie);

	if ( GetGlobalInt(12) )
	{
		oLeiter.Visible = true; // offen
	}
	else
	{
		oLeiter.Visible = false; // zu
	}

	PlayMusic(24);
}


