/****************************
*   Objekt-Funktionen
****************************/
function oLeiter_AnyClick()
{
	if (any_click_move(167, 128, eDirLeft))
	{
		if (UsedAction(eActWalkTo))
		{
			Wait(5);
			player.EnterRoom(11, 120, 126, eDirLeft);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Hier geht's auf den Dachboden.");
		}
		else if (UsedAction(eActClose))
		{
			SetGlobalInt(12, 0);
			oLeiter.Visible = false;
		}
		else Unhandled();
	}
}

function oLukenoeffner_AnyClick()
{
	if (any_click_move(83, 127, eDirLeft))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Unser Lukenöffner.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			oLukenoeffner.Visible = false;
			PlaySound(4);
			player.AddInventory(iLukenoeffner);
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Ich sollte ihn nehmen, bevor ich ihn benutzen kann.");
		}
		else if (UsedAction(eActOpen) || UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Dir geht's schon noch ganz gut, wie?");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Dann fällt er nur um.");
		}
		else Unhandled();
	}
}


