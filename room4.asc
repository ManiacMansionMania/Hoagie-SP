function room_Load()
{
	oTuer.init_object(2);
	oTeppich.Clickable = false;

	if ( GetGlobalInt(97) == 1 )
	{
		PlayMusic(25);
	}
	else if ( GetGlobalInt(99) == 0 )
	{
		PlayMusic(24);
	}
}



