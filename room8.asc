/****************************
*   Tür-Hotspot-Funktionen
****************************/
function hNachOben_AnyClick()
{
	if (any_click_move(73, 32, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
			Wait(5);
			if ( GetGlobalInt(7) )
			{
				player.EnterRoom(3, 389, 131, DIR_DOWN);
			}
			else
			{
				player.Say("Die Tür ist leider zu.");
			}
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Hier geht's hoch.");
		}
		else if (UsedAction(eActOpen))
		{
			if ( GetGlobalInt(7) )
			{
				player.Say("Die Tür ist doch schon auf.");
			}
			else
			{
				PlaySound(2);
				SetGlobalInt(7, 1);
			}
		}
		else if (UsedAction(eActClose))
		{
			if ( !GetGlobalInt(7) )
			{
				player.Say("Die Tür ist doch schon zu.");
			}
			else
			{			
				PlaySound(3);
				SetGlobalInt(7, 0);
			}
		}
		else Unhandled();

	}
}


