/****************************
*   Raum-Funktionen
****************************/
function room_Load()
{
	if ( GetGlobalInt(12) )
	{
		oLeiter.Graphic = 854; // offen
	}
	else
	{
		oLeiter.Graphic = 853; // zu
	}
}


